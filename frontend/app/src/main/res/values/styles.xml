<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Styles -->
    <style name="TextHeading">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSubheading">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextCaption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <!-- Button Styles -->
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">48dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppButton.Primary">
        <item name="backgroundTint">@color/primary</item>
        <item name="rippleColor">@color/primary_dark</item>
    </style>

    <style name="AppButton.Secondary">
        <item name="backgroundTint">@color/primary_variant</item>
        <item name="rippleColor">@color/primary</item>
    </style>

    <style name="AppButton.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
        <item name="rippleColor">@color/primary_light</item>
    </style>

    <!-- Card Style -->
    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="strokeColor">@color/primary_variant</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="OrangeSwitch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorSwitchThumbNormal">#CCCCCC</item>
        <item name="android:colorForeground">#EEEEEE</item>
    </style>
</resources> 