<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.intellidish">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".IntelliDishApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IntelliDish"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="false"
        tools:targetApi="31" >
        <activity
            android:name=".CreatePotluckActivity"
            android:exported="false" />
        <activity
            android:name=".PotluckDetailActivity"
            android:exported="false" />
        <activity
            android:name=".AllPotlucksActivity"
            android:exported="false" />
        <activity
            android:name=".ManageRecipes"
            android:exported="false" />
        <activity
            android:name=".ManageFriends"
            android:exported="false" />
        <activity
            android:name=".RankRecipesActivity"
            android:exported="false" />
        <activity
            android:name=".HomePage"
            android:exported="false"
            android:label="@string/title_activity_home_page"
            android:theme="@style/Theme.IntelliDish.NoActionBar" />
        <activity
            android:name=".RecommendationActivity"
            android:exported="false" />
        <activity
            android:name=".RecipeDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ManageParticipants"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PotluckActivity"
            android:exported="false" />
        <activity
            android:name=".RecipeResultsActivity"
            android:exported="false" />
    </application>

</manifest>